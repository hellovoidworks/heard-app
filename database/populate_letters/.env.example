# Reddit API credentials
# Create these at https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_client_id
REDDIT_CLIENT_SECRET=your_client_secret
REDDIT_USER_AGENT=HeardApp/1.0 (by /u/yourUsername)

# Supabase credentials
# Find these in your Supabase project settings > API
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your_supabase_anon_key

# Ollama configuration
# Set to "true" to use Ollama for category assignment
OLLAMA_ENABLED=false
# URL of the Ollama API (default: http://localhost:11434/api/generate)
OLLAMA_API_URL=http://localhost:11434/api/generate
# Model to use for categorization (default: llama3)
OLLAMA_MODEL=llama3 